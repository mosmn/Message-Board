extends layout

block content
  div(class="container mx-auto p-4")
    h1(class="text-4xl text-center font-bold my-8 text-white")= title

    // Add a wrapper for the discussion thread
    div(class="message-list divide-y divide-gray-300")
      each message in messages
        // Each message is a comment
        div(class="message p-4 bg-white rounded-lg shadow-md mb-4")  // Added margin-bottom to create spacing
          div(class="message-content text-gray-800")
            p(class="message-text text-lg")= message.text
            p(class="message-user text-sm text-gray-600") User: #{message.user}
            p(class="message-added text-sm text-gray-600") Added: #{message.added.toLocaleString()}

    // Center the button and make it smaller in width
    div(class="text-center")
      a(href="/new" class="block w-32 mx-auto mt-6 px-4 py-2 bg-blue-500 hover:bg-blue-600 rounded-lg focus:outline-none focus:bg-blue-600 transition duration-300 ease-in-out")
        | Add New Message
