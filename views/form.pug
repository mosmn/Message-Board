extends layout

block content
  div(class="container h-screen flex justify-center items-center mx-auto p-4")
    form(method="POST" action="/new" class="max-w-screen-md p-8 bg-white rounded-lg shadow-md")
      h2(class="text-6xl font-semibold text-center text-gray-800 mb-6") Create New Message

      div.mb-4
        input(type="text" name="user" placeholder="Your name" class="w-full p-5 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 text-4xl text-black")

      div.mb-4
        textarea(name="text" placeholder="Your message" class="w-full p-5 border border-gray-300 bg-white rounded-lg focus:outline-none focus:border-blue-500 text-4xl text-black")

      div.flex.items-center.justify-between
        button(type="submit" class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-lg focus:outline-none focus:bg-blue-600 transition duration-300 ease-in-out")
          | Submit
        button(type="button" onclick="window.location.href='/'" class="px-6 py-3 bg-gray-300 hover:bg-gray-400 text-gray-600 rounded-lg focus:outline-none focus:bg-gray-400 transition duration-300 ease-in-out ml-4")
          | Cancel
